<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:mockito="http://www.mockito.org/spring/mockito"
	   xmlns:task="http://www.springframework.org/schema/task"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.mockito.org/spring/mockito classpath:spring/mockito.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
						http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
						http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.2.xsd">

	<context:annotation-config/>
        <aop:aspectj-autoproxy/>
        
        <bean id="uisHandler" class="eu.europeana.cloud.service.mcs.persistent.AlwaysSuccessfulUISClientHandler"/>
	<bean id="serviceExceptionTranslator" class="eu.europeana.cloud.service.mcs.persistent.aspects.ServiceExceptionTranslator"/>
	
	<bean id="cassandraDataProviderService"
		  class="eu.europeana.cloud.service.mcs.persistent.CassandraDataProviderService"/>
	<bean id="cassandraDataSetService" class="eu.europeana.cloud.service.mcs.persistent.CassandraDataSetService"/>
        <bean id="cassandraRecordService" class="eu.europeana.cloud.service.mcs.persistent.CassandraRecordService"/>

	
	<mockito:mock id="sorlConnector" class="eu.europeana.cloud.service.mcs.mock_impl.EmbeddedSolrConnectionProvider"/>
	<mockito:mock id="solrDAO" class="eu.europeana.cloud.service.mcs.persistent.SolrDAO"/>
	<mockito:mock id="solrRepresentationIndexer" class="eu.europeana.cloud.service.mcs.persistent.SolrRepresentationIndexer"/>
	<mockito:mock id="cassandraConnectionProvider" class="eu.europeana.cloud.service.mcs.persistent.CassandraConnectionProvider" />
	<mockito:mock id="cassandraDataProviderDAO" class="eu.europeana.cloud.service.mcs.persistent.CassandraDataProviderDAO"/>
	<mockito:mock id="cassandraDataSetDAO" class="eu.europeana.cloud.service.mcs.persistent.CassandraDataSetDAO"/>
	<mockito:mock id="cassandraRecordDAO" class="eu.europeana.cloud.service.mcs.persistent.CassandraRecordDAO"/>
        <mockito:mock id="swiftContentDAO" class="eu.europeana.cloud.service.mcs.persistent.SwiftContentDAO"/>
</beans>